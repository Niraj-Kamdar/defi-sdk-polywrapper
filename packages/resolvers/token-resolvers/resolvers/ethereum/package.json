{
  "name": "@defiwrapper/ethereum-token-resolver",
  "description": "resolver for ethereum token standards",
  "version": "2.0.1",
  "scripts": {
    "lint": "eslint . --ext .ts --ignore-path ../../../../../.eslintignore",
    "lint:fix": "eslint . --ext .ts --fix --ignore-path ../../../../../.eslintignore",
    "format": "prettier --write \"./**/*.{js,jsx,json,ts}\"",
    "build": "yarn build:polywrap",
    "build:polywrap": "npx polywrap build",
    "codegen": "npx polywrap codegen",
    "watch": "npx polywrap build -i -e defisdk.eth -w",
    "infra:up": "npx polywrap infra up",
    "infra:down": "npx polywrap infra down",
    "deploy": "npx polywrap deploy",
    "test": "yarn test:codegen && yarn test:e2e",
    "test:codegen": "npx polywrap codegen -m ./src/__tests__/types/polywrap.app.yaml -g ./src/__tests__/types/wrap",
    "test:e2e": "jest --passWithNoTests --runInBand --verbose",
    "compile:config:workflow": "tsc ./config/config.workflow.ts --esModuleInterop --resolveJsonModule",
    "workflow": "yarn infra:up && yarn compile:config:workflow && sleep 5 && npx polywrap run -c ./config/config.workflow.js && yarn infra:down"
  },
  "dependencies": {
    "@polywrap/wasm-as": "0.9.4"
  },
  "devDependencies": {
    "@polywrap/ens-resolver-plugin-js": "0.9.4",
    "@polywrap/ethereum-plugin-js": "0.9.4",
    "@polywrap/ipfs-plugin-js": "0.9.4",
    "@polywrap/test-env-js": "0.9.4",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "assemblyscript": "0.19.23",
    "axios": "^0.27.2",
    "dotenv": "^16.0.2",
    "eslint": "^7.32.0",
    "ethers": "5.0.7",
    "jest": "^27.4.2",
    "polywrap": "0.9.4",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3"
  }
}
